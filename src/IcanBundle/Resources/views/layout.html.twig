{% extends '::base-admin.html.twig' %}
{% block title %}iCan CMS Ican{% endblock %}

{% block stylesheets %}

    <!--begin::Web font -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: {"families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"]},
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!--end::Web font -->

    <!--begin::Global Theme Styles -->
    <link href="{{ asset('bundles/ican/assets/vendors/base/vendors.bundle.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('bundles/ican/assets/demo/demo7/base/style.bundle.css') }}" rel="stylesheet"
          type="text/css"/>

    <!--begin::My Styles -->
    <link href="{{ asset('bundles/ican/css/styles.css') }}" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('bundles/ican/css/my-components.css') }}" rel="stylesheet" type="text/css"/>

    {% block stylesheetspecific %}  {% endblock %}

{% endblock %}

{% block bodyclass %}m-page--fluid m--skin- m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-light m-aside-left--fixed m-aside-left--offcanvas m-aside-left--minimize m-brand--minimize m-footer--push m-aside--offcanvas-default{% endblock %}

{% block body %}

    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">

        <!-- BEGIN: Header -->
        {{ render(controller('IcanBundle:Default:renderHeader')) }}

        <!-- END: Header -->

        <!-- begin::Body -->
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">

            <!-- BEGIN: Left Aside -->
            {{ render(controller('IcanBundle:Default:renderMenu')) }}
            <!-- END: Left Aside -->

            <div class="m-grid__item m-grid__item--fluid m-wrapper">

                {% block content %}

                {% endblock %}
            </div>
        </div>

        <!-- end:: Body -->

        <!-- begin::Footer -->
        <footer class="m-grid__item		m-footer ">
            <div class="m-container m-container--fluid m-container--full-height m-page__container">
                <div class="m-stack m-stack--flex-tablet-and-mobile m-stack--ver m-stack--desktop">
                    <div class="m-stack__item m-stack__item--left m-stack__item--middle m-stack__item--last">
							<span class="m-footer__copyright">
								2018 &copy; iCan CMS desarrollado por <img
                                        src="{{ asset('bundles/ican/img/ip21-footer.jpg') }}"> <img
                                        src="{{ asset('bundles/ican/img/disrupsoft-footer.jpg') }}">
							</span>
                    </div>
                    <div class="m-stack__item m-stack__item--right m-stack__item--middle m-stack__item--first">

                        <span class="m-footer__copyright">
                            <img src="{{ asset('bundles/ican/img/ican-footer.jpg') }}"/>basado en
                         <img src="{{ asset('bundles/ican/img/html5-footer.jpg') }}"/>
                                <img src="{{ asset('bundles/ican/img/css3-footer.jpg') }}"/>
                                <img src="{{ asset('bundles/ican/img/bootstrap-footer.jpg') }}"/>

							</span>
                    </div>
                </div>
            </div>
        </footer>

        <!-- end::Footer -->
    </div>

    <!-- begin::Scroll Top -->
    <div id="m_scroll_top" class="m-scroll-top">
        <i class="la la-arrow-up"></i>
    </div>

    {% include 'IcanBundle:Block:modals.html.twig' %}

{% endblock %}

{% block javascripts %}

    <!--begin::Global Theme Bundle -->
    <script src="{{ asset('bundles/ican/assets/vendors/base/vendors.bundle.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/ican/assets/demo/demo7/base/scripts.bundle.js') }}"
            type="text/javascript"></script>

    <script src="{{ asset('bundles/ican/js/date.format.js') }}"></script>
    <script src="{{ asset('bundles/ican/js/myapp.js') }}"></script>

    <script>
        jQuery(document).ready(function () {
            MyApp.init();
        });
    </script>
    <!-- END JAVASCRIPTS -->
    {% block javascriptsspecific %}  {% endblock %}
{% endblock %}


