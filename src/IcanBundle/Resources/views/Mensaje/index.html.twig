{% extends 'IcanBundle::layout.html.twig' %}

{% block subtitle %} - Mensajes{% endblock %}

{% block stylesheetspecific %}{% endblock %}

{% block content %}
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">Dashboard</h3>
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="{{ url('home') }}" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Mensajes</span>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Administre los mensajes de contacto</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END: Subheader -->

    <div class="m-content">
        <div id="lista-mensaje" class="m-portlet m-portlet--mobile" m-portlet="true">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Mis Mensajes
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <a href="#" m-portlet-tool="fullscreen"
                               class="m-portlet__nav-link m-portlet__nav-link--icon">
                                <i class="la la-expand"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <!--begin: actions -->
                <div class="m-form m-form--label-align-right m--margin-bottom-20">
                    <div class="row">
                        <div class="col-xl-12 order-1 m--align-left">
                            <a id="btn-nuevo-mensaje" class="btn btn-success m-btn m-btn--custom m-btn--icon m-btn--air"
                               href="#">
							<span>
								<i class="la la-plus"></i>
								<span>
									Nuevo
								</span>
							</span>
                            </a>
                            <a id="btn-eliminar-mensaje"
                               class="btn btn-danger m-btn m-btn--custom m-btn--icon m-btn--air m--pull-right"
                               href="#">
							<span>
								<i class="la la-trash-o"></i>
								<span>
									Eliminar
								</span>
							</span>
                            </a>
                        </div>
                    </div>
                </div>
                <!--end: actions -->
                <!--begin: Search Form -->
                <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                    <div class="row align-items-center">
                        <div class="col-xl-12 order-1">
                            <div class="form-group m-form__group row align-items-center">
                                <div class="col-md-3">
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker"
                                               placeholder="Fecha inicial"
                                               id="fechaInicial"/>
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker"
                                               placeholder="Fecha final"
                                               id="fechaFin"/>
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="m-input-icon m-input-icon--left">
                                        <input type="text" class="form-control m-input m_form_search"
                                               placeholder="Buscar...">
                                        <span class="m-input-icon__icon m-input-icon__icon--left">
									<span><i class="la la-search"></i></span>
								</span>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <a href="javascript:;" id="btn-filtrar"
                                       class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air">
                                <span>
                                    <i class="la la-search"></i>
                                    <span>Filtrar</span>
                                </span>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!--end: Search Form -->
                <!--begin: Datatable -->
                <div class="m_datatable" id="mensaje-table-editable"></div>
                <!--end: Datatable -->
            </div>
        </div>

        <div id="form-mensaje" class="m-portlet m--hide">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text" id="form-mensaje-title">
                            ¿Deseas crear un nuevo mensaje? Sigue los siguientes pasos:
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <a href="javascript:;"
                               class="m-portlet__nav-link m-portlet__nav-link--icon cerrar-form-mensaje"><i
                                        class="la la-close"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
            <form class="m-form" id="mensaje-form" action="#"
                  enctype="multipart/form-data" method="post">

                <input type="hidden" id="mensaje_id" name="mensaje_id"/>

                <div class="m-portlet__body">
                    <div class="m-form__section m-form__section--first">
                        <div class="form-group m-form__group ic-form-group">
                            <label>
                                <span class="ic-step-number">1</span>
                                Para comenzar, ingrese el nombre y apellidos
                                <span class="ic-small italic">(obligatorio)</span>
                            </label>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" class="form-control form-control-text event-change"
                                           id="nombre" name="nombre"/>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group ic-form-group">
                            <label>
                                <span class="ic-step-number">2</span>
                                A continuación, ingrese el email y teléfono de contacto
                                <span class="ic-small italic">(obligatorio)</span>
                            </label>
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="input-group m-input-group">
                                        <div class="input-group-prepend"><span class="input-group-text">@</span></div>
                                        <input type="text" class="form-control event-change" id="email" name="email">
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="input-group m-input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="flaticon-support"></i></span>
                                        </div>
                                        <input type="text" class="form-control event-change" id="telefono"
                                               name="telefono">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group ic-form-group">
                            <label>
                                <span class="ic-step-number">3</span>
                                Seguidamente, ingrese el asunto del mensaje
                                <span class="ic-small italic">(obligatorio)</span>
                            </label>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="text" class="form-control form-control-text event-change"
                                           id="asunto" name="asunto"/>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group ic-form-group">
                            <label>
                                <span class="ic-step-number">4</span>
                                Para finalizar, ingrese el contenido del mensaje
                                <span class="ic-small italic">(obligatorio)</span>
                            </label>
                            <div class="row">
                                <div class="col-md-12">
                                    <textarea class="form-control event-change" id="descripcion"
                                              name="descripcion"
                                              rows="6"></textarea>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="m-form__actions">
                        <button id="btn-salvar-mensaje" class="btn btn-success" type="button">
                            Guardar
                        </button>
                        <button class="btn btn-danger cerrar-form-mensaje" type="button">
                            Cancelar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

{% block javascriptsspecific %}
    <script src="{{ asset('bundles/ican/js/pages/mensajes.js') }}"></script>
    <script>
        jQuery(document).ready(function () {
            Mensajes.init();
        });
    </script>
{% endblock %}
