{% extends 'FrontendBundle::layout.html.twig' %}

{% block title %} {{ producto.titulo }} {% endblock title %}

{% block metas_titulo %}
    <meta name="title" content="{{ producto.titulo }} - Digimaq"/>
    <meta http-equiv="title" content="{{ producto.titulo }} - Digimaq"/>
    <meta name="DC.Title" content="{{ producto.titulo }} - Digimaq"/>
{% endblock metas_titulo %}

{% block metas_descripcion %}
    <meta name="description" content="{{ producto.descripcion |striptags| truncate(180, true) }}"/>
    <meta http-equiv="description" content="{{ producto.descripcion |striptags| truncate(180, true) }}"/>
    <meta name="DC.description" content="{{ producto.descripcion |striptags| truncate(180, true) }}"/>
{% endblock metas_descripcion %}

{% block keywords %}
    <meta name="Keywords" content="{{ producto.tags }}"/>
    <meta http-equiv="keywords" content="{{ producto.tags }}"/>
    <meta name="DC.keywords" content="{{ producto.tags }}"/>
{% endblock keywords %}

{% block metafb %}
    <meta property="og:type" content="article">
    <meta property="og:site_name" content="Digimaq.cl"/>
    <meta property="og:url" content="{{ url('productodetalle',{'url': producto.url}) }}">
    <meta property="og:image" content="{{ direccion_url~asset('uploads/images/'~producto.imagen) }}">
    <meta property="og:title" content="{{ producto.nombre }}">
    <meta property="og:description" content="{{ producto.descripcion |striptags| truncate(180, true) }}"/>
    <link rel="canonical" href="{{ url('productodetalle',{'url': producto.url}) }}"/>
{% endblock %}

{% block metatw %}
    <meta property="twitter:card" content="summary">
    <meta property="twitter:site" content="Digimaq.cl">
    <meta property="twitter:url" content="{{ url('productodetalle',{'url': producto.url}) }}">
    <meta property="twitter:title" content="{{ producto.nombre }}">
    <meta property="twitter:description" content="{{ producto.descripcion |striptags| truncate(180, true) }}"/>
    <meta property="twitter:image" content="{{ direccion_url~asset('uploads/images/'~producto.imagen) }}">
{% endblock %}

{% block stylesheetspecific %}
    <link href="{{ asset('bundles/frontend/css/carousel.css') }}" type="text/css" rel="stylesheet">
    <link href="{{ asset('bundles/frontend/assets/carousel-owl-carousel/owl-carousel/owl.carousel.css') }}"
          rel="stylesheet">
{% endblock %}


{% block socialbf %}
