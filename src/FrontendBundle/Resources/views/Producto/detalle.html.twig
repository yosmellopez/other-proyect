                                            <div u="prototype" class="p"
                                                 style="position: absolute; width: 90px; height: 66px; top: 0; left: 0;">
                                                <div class=w>
                                                    <thumbnailtemplate
                                                            style=" width: 100%; height: 100%; border: none;position:absolute; top: 0; left: 0;"></thumbnailtemplate>
                                                </div>
                                                <div class=c></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7 hidden-md hidden-lg">
                            <div id="slider2_container" style="position: relative; top: 0px; left: 0px; width: 600px;
                                         height: 447px; background: #ffffff; overflow: hidden;">

                                <div u="slides"
                                     style="cursor: move; position: absolute; left: 0px; top: 0px; width: 600px; height: 447px; overflow: hidden;">

                                    {% for item in producto.imagenes %}
                                        <div class="item-galeria">
                                            <img alt="{{ producto.nombre }}" u="image"
                                                 src="{{ asset('uploads/productos/'~item.imagen) }}"/>
                                            <img alt="{{ producto.nombre }}" u="thumb"
                                                 src="{{ asset('uploads/productos/thumb-'~item.imagen) }}"/>
                                        </div>
                                    {% endfor %}
                                </div>

                                <span u="arrowleft" class="jssora05l"
                                      style="width: 40px; height: 40px; top: 180px; left: 8px;">
                                        </span>

                                <span u="arrowright" class="jssora05r"
                                      style="width: 40px; height: 40px; top: 180px; right: 10px">
                                        </span>

                                <!-- Bullet Navigator -->
                                <div data-u="navigator" class="jssorb01" style="bottom:80px;right:16px;">
                                    <div data-u="prototype" style="width:12px;height:12px;"></div>
                                </div>

                            </div>
                        </div>

                        <div class="col-md-5">
                            <div class="div-detalle-producto spacer2">
                                <h2 class="product-detail">
                                    {{ producto.nombre }}
                                </h2>
                                <p>
                                    <b>Categoría:</b> {{ producto.categoria.nombre }} <br>
                                    <b>Marca:</b> {{ producto.marca.nombre }} <br>
                                </p>
                                <p>
                                    <b>Stock:</b> {{ producto.stock }}<br>
                                    {% if producto.mostrarPrecio %}
                                        <b>Precio Normal:</b> ${{ producto.precio }} <br>
                                        <b>Precio Oferta:</b> ${{ producto.precioOferta }} <br>
                                    {% endif %}
                                </p>
                            </div>
                            <div class="div-social-producto spacer2">
                                <div class="fb-like" data-href="{{ url('productodetalle',{'url': producto.url}) }}"
                                     data-layout="button" data-action="like" data-size="small"
                                     data-show-faces="false"
                                     data-share="false"></div>
                                <div class="fb-share-button"
                                     data-href="{{ url('productodetalle',{'url': producto.url}) }}"
                                     data-layout="button_count" data-size="small">
                                </div>
                                <div class="twitter-share-button">
                                    <a href="{{ url('productodetalle',{'url': producto.url}) }}"
                                       class="twitter-share-button">Tweet</a>
                                </div>
                            </div>
                            <h4 class="producto-subtitulo">Descripción del producto</h4>
                            {{ producto.descripcion |raw }}

                        </div>
                    </div>
