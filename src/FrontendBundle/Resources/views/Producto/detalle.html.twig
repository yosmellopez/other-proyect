                            <div class="col-md-12">
                                <h3 class="relacionados-titulo">Productos Relacionados</h3>
                                <div class="brands spacer1">
                                    <div class="owl-carousel owl-carousel4">
                                        {% for item in producto.relacionados %}
                                            <div style="margin: 5px;">
                                                <div class="recent-work-wrap">
                                                    <img src="{{ asset('uploads/productos/portada-'~item.imagen) }}"
                                                         class="img-responsive" alt="{{ item.nombre }}"/>
                                                    <div class="overlay">
                                                        <div class="recent-work-inner">
                                                            <a class="preview"
                                                               href="{{ url('productodetalle',{url: item.url}) }}">
                                                                <h3>
                                                                    {{ item.nombre }}
                                                                </h3>
                                                                <p>
                                                                    Stock: {{ item.stock }}<br>
                                                                    {% if item.mostrarPrecio %}
                                                                        Precio Normal: ${{ item.precio }}<br>
                                                                        Precio Oferta: ${{ item.precioOferta }}
                                                                    {% endif %}
                                                                </p>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
