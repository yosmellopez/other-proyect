{% extends 'FrontendBundle::layout.html.twig' %}

{% block title %} {{ seo_on_page.titulo }} {% endblock title %}

{% block metas_titulo %}
    <meta name="title" content="{{ seo_on_page.titulo }} - Ican"/>
    <meta http-equiv="title" content="{{ seo_on_page.titulo }} - Ican"/>
    <meta name="DC.Title" content="{{ seo_on_page.titulo }} - Ican"/>
{% endblock metas_titulo %}

{% block metas_descripcion %}
    <meta name="description" content="{{ seo_on_page.descripcion |striptags| truncate(180, true) }}"/>
    <meta http-equiv="description" content="{{ seo_on_page.descripcion |striptags| truncate(180, true) }}"/>
    <meta name="DC.description" content="{{ seo_on_page.descripcion |striptags| truncate(180, true) }}"/>
{% endblock metas_descripcion %}

{% block keywords %}
    <meta name="Keywords" content="{{ seo_on_page.tags }}"/>
    <meta http-equiv="keywords" content="{{ seo_on_page.tags }}"/>
    <meta name="DC.keywords" content="{{ seo_on_page.tags }}"/>
{% endblock keywords %}

{% block stylesheetspecific %}

{% endblock %}

{% block menucontactoactiveclass %}active{% endblock menucontactoactiveclass %}


{% block content %}
    <section id="about-us">
        <div class="container">
            <div class="center wow fadeInDown">
                <h2 class="spacer1">Contáctenos</h2>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="min-height: 1px;">
                    <p class="lead">
                        Para cualquier información o consulta, puede llamarnos a los teléfonos: <br>
                        <b>(+56) 2 2281 59 24 - (+56) 2 2288 54 18 - (+56) 2 2295 11 58</b> <br>
                        o escribirnos mediante el siguiente formulario.
                    </p>
                    <div id="section-contacto">
                        <form id="contact-form" action="{{ path('procesarcontacto') }}" method="POST">
                            <fieldset>
                                <div class="form-group">
                                    <label for="name">Nombre</label>
                                    <input class="form-control" type="text" id="nombre" name="nombre"
                                           placeholder="Ingrese el nombre"/>
                                </div>
                                <div class="form-group">
                                    <label for="name">Teléfono</label>
                                    <input class="form-control" type="text" id="telefono" name="telefono"
                                           placeholder="Ingrese el teléfono"/>
                                </div>
                                <div class="form-group">
                                    <label for="email">
                                        Email</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><span
                                                    class="glyphicon glyphicon-envelope"></span>
                                        </span>
                                        <input type="email" class="form-control" id="email" name="email"
                                               placeholder="Ingrese el email"/></div>
                                </div>
                                <div class="form-group">
                                    <label for="asunto">
                                        Asunto</label>
                                    <input type="text" class="form-control" id="asunto" name="asunto"
                                           placeholder="Ingrese el asunto"/>
                                </div>
                                <div class="form-group">
                                    <label for="message">Mensaje</label>
                                    <textarea class="form-control" name="mensaje" id="mensaje" rows="5"
                                              cols="25"></textarea>
                                </div>
                                <div class="form-group text-right">
                                    <label for="submit"></label>
                                    <input class="btn btn-lg btn-primary" type="button" id="btn-enviar-contacto"
                                           value="Enviar Mensaje"/>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" style="min-height: 1px;">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3324.91044293933!2d-70.58823948504575!3d-33.55570311030728!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9662d0cfdf6fa05f%3A0xd6880e456c4361c2!2sAv.+Vicu%C3%B1a+Mackenna+Ote.+10652%2C+La+Florida%2C+Regi%C3%B3n+Metropolitana!5e0!3m2!1ses!2scl!4v1453151021206"
                            width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

{% block javascriptspecific %}
    <script src="{{ asset('bundles/ican/js/jquery.validate.min.js') }}"></script>
    <script src="{{ asset('bundles/frontend/js/my/contacto.js') }}"></script>
{% endblock %}
